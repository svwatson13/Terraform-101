{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY_ID`}}"
  },
  "builders": [{
    "ami_name": "joseph-pontin-mongod-ami-{{timestamp}}",

    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",

    "subnet_id": "subnet-05f17c9de25b45b3a",
    "associate_public_ip_address": "true",
    "ssh_keypair_name": "joseph-eng-48-first-key",
    "ssh_private_key_file": "~/.ssh/joseph-eng-48-first-key.pem",

    "region": "eu-west-1",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "*ubuntu-xenial-16.04-amd64-server-*",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu"

  }],
  "provisioners": [
    {
      "type": "chef-solo",
      "cookbook_paths": ["./berks-cookbooks"],
      "run_list": ["db_ami::default"]
    }
  ]
}
